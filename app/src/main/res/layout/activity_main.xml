<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.darkerload.sendimage.MainActivity">

    <Button
        android:id="@+id/btnPickImage"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="16dp"
        android:text="Pick a Image"
        app:layout_constraintLeft_toLeftOf="parent"
        tools:layout_editor_absoluteY="97dp"
        tools:text="Pick a image" />

    <ImageView
        android:id="@+id/imgPick"
        android:layout_width="369dp"
        android:layout_height="216dp"
        app:srcCompat="@mipmap/ic_launcher"
        android:layout_marginTop="107dp"
        app:layout_constraintTop_toBottomOf="@+id/btnPickImage"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="8dp" />

    <Button
        android:id="@+id/btnSend"
        android:layout_width="179dp"
        android:layout_height="49dp"
        android:layout_marginBottom="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="43dp"
        android:text="Send This Image"
        app:layout_constraintBottom_toTopOf="@+id/imgPick"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btnPickImage" />

</android.support.constraint.ConstraintLayout>
